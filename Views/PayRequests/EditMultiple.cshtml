@model List<PayRequest>

<form asp-controller="PayRequests" asp-action="EditMultiple" method="post" enctype="multipart/form-data">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Description</th>
                <th>Transaction Date</th>
                <th>Category</th>
                <th>Created By</th>
                <th>Approved By</th>
                <th>Actioned By</th>
                <th>Process Date</th>
                <th>Process Status</th>
                <th>Evidence of Payment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(model => item.Id)</td>
                    <td>@Html.DisplayFor(model => item.Description)</td>
                    <td>@Html.DisplayFor(model => item.TransactionDate)</td>
                    <td>@Html.DisplayFor(model => item.Category)</td>
                    <td>@Html.DisplayFor(model => item.CreatedBy)</td>
                    <td>@Html.DisplayFor(model => item.ApprovedBy)</td>
                    <td>@Html.DisplayFor(model => item.ActionedBy)</td>
                    <td>@Html.DisplayFor(model => item.ProcessDate)</td>
                    <td>@Html.DisplayFor(model => item.ProcessStatus)</td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="file" asp-for="@item.EvidenceOfPayment" class="form-control" />
                                <span asp-validation-for="@item.EvidenceOfPayment" class="text-danger"></span>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>
